{
  "load_test": {
    "concurrent_users": 10,
    "duration_seconds": 300,
    "ramp_up_seconds": 30,
    "target_endpoints": [
      "/health",
      "/experiments",
      "/reports"
    ]
  },
  "performance_thresholds": {
    "max_response_time_ms": 5000,
    "min_success_rate": 0.95,
    "max_error_rate": 0.05,
    "max_cpu_utilization": 0.80,
    "max_memory_utilization": 0.85
  },
  "scalability_test": {
    "concurrent_experiments": [1, 3, 5, 10],
    "experiment_duration_seconds": 60,
    "measurement_interval_seconds": 10
  },
  "stress_test": {
    "max_concurrent_requests": 100,
    "step_increase": 10,
    "step_duration_seconds": 60,
    "failure_threshold": 0.20
  }
}